<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5c12a6"
    tools:context=".Shop_single_item">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_shape_itemshape" />

    <TextView
        android:id="@+id/shop"
        android:fontFamily="@font/mons_bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:lineSpacingExtra="-4.3sp"
        android:text="SHOP"
        android:textColor="#5c12a6"
        android:textSize="61.2sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/cardView"
        android:translationY="20dp"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.75"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="90dp"
        app:cardCornerRadius="12.3dp"


        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/shop">

        <ImageView
            android:id="@+id/item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:background="#FFFFFFFF" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/product_credit"
        android:fontFamily="@font/mons_bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="-0.8sp"
        android:text="XCASH :  60"
        app:layout_constraintTop_toBottomOf="@+id/cardView"
        app:layout_constraintStart_toStartOf="@+id/cardView"
        android:textColor="#ecf7fa"
        android:textSize="12sp"
        tools:layout_editor_absoluteX="80dp"
        tools:layout_editor_absoluteY="384dp" />

    <TextView
        android:fontFamily="@font/mons_bold"
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:background="@drawable/dark_violet_rounded_rect"
        android:gravity="center"
        android:lineSpacingExtra="-1.5sp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:text="SMART WATCH"
        android:textColor="#ecf7fa"
        android:textSize="21.5sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView"
        app:layout_constraintWidth_percent="0.59" />

    <TextView
        android:fontFamily="@font/nexa_light"
        android:id="@+id/description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/dark_violet_rounded_rect"
        android:gravity="center_vertical"
        android:lineSpacingExtra="1sp"
        android:padding="20dp"
        android:text="The Smart watch is a very powerful device to track the spent and to know the heartrate."
        android:textColor="#ecf7fa"
        android:textSize="17.7sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintWidth_percent="0.83" />



    <Button
android:fontFamily="@font/nexabold"
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/selector_white_19dp"
        android:gravity="center"
        android:text="Buy Now!"
        android:textColor="#1b364f"
        android:textSize="14.8sp"
        android:paddingStart="35dp"
        android:paddingRight="35dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/description"
        app:layout_constraintVertical_bias="0.0"
       />

    <TextView
        android:fontFamily="@font/mons_bold"
        android:id="@+id/credits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:lineSpacingExtra="-2sp"
        android:text="60"
        android:textColor="#ecf7fa"
        android:textSize="27.8sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:fontFamily="@font/mons_bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:gravity="end"
        android:lineSpacingExtra="-1.2sp"
        android:text="YOUR\nXCASH"

        android:textColor="#ecf7fa"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/credits" />

    <ImageView
        android:id="@+id/back"
        android:layout_width="25dp"
        android:layout_height="25dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/selector_back_button"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>