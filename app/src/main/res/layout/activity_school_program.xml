<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_school"
    tools:context=".School_program">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/shape"
            android:layout_width="0dp"
            app:layout_constraintDimensionRatio="1:0.38"
            android:layout_height="0dp"
            app:srcCompat="@drawable/school_page_asst"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

       <ImageView
           android:id="@+id/close"
           android:layout_width="30dp"
           android:layout_height="30dp"
           app:srcCompat="@drawable/ic_close_blue"
           android:layout_marginTop="10dp"
           android:layout_marginRight="10dp"
           app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:fontFamily="@font/nexabold"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="-5.3sp"
            android:textColor="#f2f2f1"
            android:textSize="33sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/shape"
            android:text="START YOUR" />

        <TextView
            android:id="@+id/program"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nexabold"
            android:gravity="center_horizontal"

            android:lineSpacingExtra="-5.3sp"
            android:textColor="#f2f2f1"
            android:textSize="33sp"
            android:translationY="-10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/start"
            android:text="P&#150;R&#150;O&#150;G&#150;R&#150;A&#150;M" />

        <TextView
            android:id="@+id/des"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mons_thin"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="2.7sp"
            android:textColor="#f2f2f1"
            android:textSize="20.3sp"
            android:translationY="-10dp"
            app:layout_constraintTop_toBottomOf="@id/program"
            app:layout_constraintStart_toStartOf="@id/guideline05"
            app:layout_constraintEnd_toEndOf="@id/guideline95"
            android:text="Purchase the Health program
from your school" />


       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/button_linear"
           app:layout_constraintTop_toBottomOf="@id/des"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintEnd_toEndOf="parent"
           android:paddingLeft="60dp"
           android:paddingRight="60dp"
           android:paddingBottom="5dp"
           android:paddingTop="5dp"
           android:background="@drawable/semi_white_no_shadow"
           android:orientation="vertical">
           <TextView
               android:id="@+id/error"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textColor="#3587f2"
               android:fontFamily="@font/nexa_light"
               android:visibility="invisible"
               android:layout_gravity="center_horizontal"
               android:text="Wrong School Id"/>
           <EditText
               android:id="@+id/schoolCode"
               android:layout_width="wrap_content"
               android:layout_height="50dp"
               android:hint="Enter School Code"
              android:gravity="center"
               app:layout_constraintWidth_percent="0.8"
               />
           <TextView
               android:id="@+id/buyNow"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:textSize="20.3sp"
               android:clickable="true"
               android:fontFamily="@font/mons_bold"
               android:textColor="@drawable/text_color_blue"
               android:lineSpacingExtra="11sp"
               android:layout_gravity="center_horizontal"
               android:gravity="center_horizontal"
               android:text="Buy Now"
               />
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="16sp"
               android:textColor="#3587f2"
               android:fontFamily="@font/mons_bold"
               android:layout_gravity="center_horizontal"
               android:lineSpacingExtra="15.3sp"
               android:gravity="center_horizontal"
               android:text="Rs.150 ( 1 Month)"
               />
       </LinearLayout>
        <View
            android:id="@+id/line1"
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:background="#f2f2f2"
            android:layout_marginTop="25dp"
            app:layout_constraintStart_toStartOf="@id/guideline05"
            app:layout_constraintEnd_toEndOf="@id/guideline95"
            app:layout_constraintTop_toBottomOf="@id/button_linear"/>

        <TextView
            android:layout_marginTop="20dp"
            android:id="@+id/earn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/line1"
            app:layout_constraintEnd_toEndOf="@id/guideline95"
            android:fontFamily="@font/mons_thin"
            android:textSize="24.3sp"
            android:textColor="#f2f2f1"
            android:lineSpacingExtra="-7.3sp"
            android:gravity="end"
            android:text="Earn Points &amp;Rewards!\nCompete with your friends"

            />
        <TextView
            android:id="@+id/with"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/earn"
            app:layout_constraintEnd_toEndOf="@id/guideline95"
            android:fontFamily="@font/mons_thin"
            android:textSize="16.3sp"
            android:textColor="#f2f2f1"
            android:lineSpacingExtra="-7.3sp"
            android:gravity="end"
            android:text="With"

            />
        <TextView
            android:id="@+id/xoogs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/with"
            app:layout_constraintEnd_toEndOf="@id/guideline95"
            android:fontFamily="@font/mons_thin"
            android:textSize="33.7sp"
            android:textColor="#f2f2f1"
            android:translationY="-10sp"
            android:lineSpacingExtra="-7.3sp"
            android:gravity="end"
            android:text="XOOG's"

            />
        <TextView
            android:id="@+id/premium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:translationY="-20dp"
            app:layout_constraintTop_toBottomOf="@id/xoogs"
            app:layout_constraintEnd_toEndOf="@id/guideline95"
            android:fontFamily="@font/mons_thin"
            android:textSize="24sp"
            android:textColor="#f2f2f1"
            android:lineSpacingExtra="-7.3sp"
            android:gravity="end"
            android:text="Premium Program"

            />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1:1.5"

            app:layout_constraintHorizontal_bias="0.2"
            android:layout_marginBottom="5dp"


            app:layout_constraintStart_toStartOf="@id/guideline05"
            app:layout_constraintEnd_toStartOf="@id/premium"
            app:layout_constraintTop_toTopOf="@id/with"
            app:layout_constraintBottom_toBottomOf="@id/premium"
            app:srcCompat="@drawable/cup_png"/>

        <View
            android:id="@+id/line2"
            android:layout_width="0dp"
            android:layout_height="0.56dp"
            android:background="#f2f2f2"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toStartOf="@id/guideline05"
            app:layout_constraintEnd_toEndOf="@id/guideline95"
            android:translationY="-10dp"
            app:layout_constraintTop_toBottomOf="@id/premium"/>

        <ImageView
            android:layout_marginTop="20dp"
            android:id="@+id/sport_image"
            android:layout_width="0dp"
            app:layout_constraintWidth_percent="0.12"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1:0.82"
            app:srcCompat="@drawable/sports_png"
            app:layout_constraintTop_toBottomOf="@+id/line2"
            app:layout_constraintStart_toStartOf="@id/sport_text"
            app:layout_constraintEnd_toEndOf="@id/sport_text"
           />
            <TextView
                android:id="@+id/sport_text"
                android:fontFamily="@font/mons_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15.7sp"
                app:layout_constraintTop_toBottomOf="@id/sport_image"
                app:layout_constraintStart_toStartOf="@id/guideline05"
                app:layout_constraintEnd_toStartOf="@id/cube_text"
                android:textColor="#57c6f2"
                android:lineSpacingExtra="-2sp"
                android:gravity="center_horizontal"
                android:text="Sports\nFitness"
                />
        <ImageView
            android:layout_marginTop="20dp"
            android:id="@+id/rubik_image"
            android:layout_width="0dp"
            app:layout_constraintWidth_percent="0.12"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1:0.82"
            app:srcCompat="@drawable/cube_game_icon"
            app:layout_constraintTop_toBottomOf="@+id/line2"
            app:layout_constraintStart_toStartOf="@id/cube_text"
            app:layout_constraintEnd_toEndOf="@id/cube_text"
            />
        <TextView
            android:id="@+id/cube_text"
            android:fontFamily="@font/mons_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15.7sp"
            app:layout_constraintTop_toBottomOf="@id/rubik_image"
            app:layout_constraintStart_toEndOf="@id/sport_text"
            app:layout_constraintEnd_toStartOf="@id/mob_text"
            android:textColor="#57c6f2"
            android:lineSpacingExtra="-2sp"
            android:gravity="center_horizontal"
            android:text="Rubikâ€™s\nPuzzles"
            />
        <ImageView
            android:layout_marginTop="20dp"
            android:id="@+id/mob_image"
            android:layout_width="0dp"
            app:layout_constraintWidth_percent="0.12"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1:1"
            app:srcCompat="@drawable/game_png"
            app:layout_constraintStart_toStartOf="@id/mob_text"
            android:translationX="-10dp"
            app:layout_constraintTop_toBottomOf="@+id/line2"

            />
        <ImageView
            android:layout_marginTop="20dp"
            android:translationX="-10dp"
            android:id="@+id/mob2_image"
            android:layout_width="0dp"
            app:layout_constraintWidth_percent="0.07"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1:1.4"
            app:srcCompat="@drawable/mobile_pnf"
            app:layout_constraintStart_toEndOf="@id/mob_image"
            app:layout_constraintEnd_toEndOf="@id/mob_text"
            app:layout_constraintTop_toBottomOf="@+id/line2"

            />
        <TextView
            android:id="@+id/mob_text"
            android:fontFamily="@font/mons_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15.7sp"
            app:layout_constraintTop_toTopOf="@id/cube_text"
            app:layout_constraintStart_toEndOf="@id/cube_text"
            app:layout_constraintEnd_toStartOf="@id/guideline95"
            android:textColor="#57c6f2"
            android:lineSpacingExtra="-2sp"
            android:gravity="center_horizontal"
            android:text="Amazing\nRewards"
            />
        <TextView
            android:id="@+id/explore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:background="@drawable/selector_semi_white_26dp"
            android:textColor="#3587f2"
            android:lineSpacingExtra="17.7sp"
            android:gravity="center_horizontal"
            app:layout_constraintTop_toBottomOf="@id/cube_text"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/mons_bold"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="50dp"
            android:paddingRight="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Explore Premium Plans"
            />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline05"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.05" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline95"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.95" />

    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.core.widget.NestedScrollView>