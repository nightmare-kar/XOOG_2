<?xml version="1.0" encoding="utf-8"?>

    <androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/blue_gradient"
        tools:context=".account_subscipe">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/shape"
                android:layout_width="0dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:translationY="-5dp"
                app:srcCompat="@drawable/ic_shape_white_subscribe_account"
                android:layout_height="160dp"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:srcCompat="@drawable/asst_booked"
                app:layout_constraintWidth_percent="0.34"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/ic_back_arrow_white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@id/l5"
            android:layout_marginTop="50dp"
            android:id="@+id/close"/>


                <LinearLayout
                    android:id="@+id/l1"
                    android:layout_width="0dp"
                    android:background="@drawable/white_shadow"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/shape"
                    app:layout_constraintHeight_percent="0.055"
                    android:layout_marginBottom="10dp"
                    app:layout_constraintWidth_percent="0.79"
                    android:layout_height="42dp"

                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/title1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingTop="5dp"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/mons_bold"
                        android:gravity="start"
                        android:lineSpacingExtra="-5sp"
                        android:text="Name"
                        android:textColor="#141f26"
                        android:textSize="17.5sp" />

                    <EditText
                        android:id="@+id/Name"
                        android:layout_width="0dp"

                        android:paddingLeft="5dp"
                        android:layout_height="match_parent"
                         android:paddingTop="5dp"
                        android:layout_weight="1.3"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/nexa_light"
                        android:textColor="#141f26"
                        android:lineSpacingExtra="1sp"
                        android:paddingBottom="4.5dp"

                        android:textSize="15sp"

                        />


                </LinearLayout>






                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/l2"
                    android:layout_width="0dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/white_shadow"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/l1"

                    android:layout_marginBottom="10dp"
                    app:layout_constraintWidth_percent="0.79"
                    android:layout_height="42dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/title3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"

                        android:fontFamily="@font/mons_bold"
                        android:gravity="start"
                        android:paddingTop="5dp"
                        android:lineSpacingExtra="-5sp"
                        android:text="Email"
                        android:textColor="#141f26"

                        android:textSize="17.5sp" />

                    <EditText
                        android:paddingLeft="5dp"
                        android:id="@+id/email"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:inputType="textEmailAddress"
                        android:layout_weight="1.3"
                        android:fontFamily="@font/nexa_light"
                        android:textColor="#141f26"
                        android:paddingBottom="2dp"
                        android:background="@android:color/transparent"

                        android:lineSpacingExtra="1sp"

                        android:textSize="15sp"

                        />




                </androidx.appcompat.widget.LinearLayoutCompat>




                <LinearLayout
                    android:id="@+id/l3"
                    android:layout_width="0dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/white_shadow"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/l2"
                    android:layout_marginBottom="10dp"
                    app:layout_constraintWidth_percent="0.79"
                    android:layout_height="42dp"

                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/title4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:paddingTop="5dp"
                        android:fontFamily="@font/mons_bold"
                        android:gravity="start"
                        android:lineSpacingExtra="-5sp"
                        android:text="Date of Birth"
                        android:textColor="#141f26"
                        android:textSize="17.5sp" />

                    <TextView
                        android:id="@+id/age"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/nexa_light"
                        android:textColor="#141f26"
                        android:paddingBottom="2.5dp"
                        android:layout_weight="1.3"
                        android:gravity="center_vertical"
                        android:paddingLeft="5dp"
                        android:background="@android:color/transparent"

                        android:lineSpacingExtra="1sp"

                        android:textSize="15sp"

                        />



                </LinearLayout>






                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/l4"
                    android:layout_width="0dp"
                    android:background="@drawable/white_shadow"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/l3"


                    android:layout_marginBottom="10dp"
                    app:layout_constraintWidth_percent="0.79"
                    android:layout_height="42dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/title5"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/mons_bold"
                        android:gravity="start"
                        android:layout_weight="1"
                        android:paddingTop="5dp"
                        android:lineSpacingExtra="-5sp"
                        android:text="Gender"
                        android:textColor="#141f26"
                        android:textSize="17.5sp" />


                    <Spinner
                        android:paddingBottom="5dp"
                        android:id="@+id/gender"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.3"
                        android:fontFamily="@font/nexa_light"
                        android:paddingTop="5dp"
                        android:textColor="#141f26"
                        android:background="@android:color/transparent"
                        android:spinnerMode="dropdown"
                        android:lineSpacingExtra="1sp"
                        android:textSize="11.7sp"

                        />



                </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/l5"
            android:layout_width="0dp"
            android:background="@drawable/white_shadow"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/l4"

            android:layout_marginBottom="10dp"
            app:layout_constraintWidth_percent="0.79"
            android:layout_height="42dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/title6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/mons_bold"
                android:gravity="start"
                android:layout_weight="1"
                android:paddingTop="5dp"
                android:lineSpacingExtra="-5sp"
                android:text="Grade/Class"
                android:textColor="#141f26"
                android:textSize="17.5sp" />


            <Spinner
                android:paddingBottom="5dp"
                android:id="@+id/grade"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.3"
                android:fontFamily="@font/nexa_light"
                android:paddingTop="5dp"
                android:textColor="#141f26"
                android:background="@android:color/transparent"
                android:spinnerMode="dropdown"
                android:lineSpacingExtra="1sp"
                android:textSize="11.7sp"

                />


        </androidx.appcompat.widget.LinearLayoutCompat>



            <Button
                android:id="@+id/choose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_white_19dp"
                android:text="CONTINUE"
                android:textSize="14.8sp"
                android:textColor="#1b364f"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:paddingHorizontal="20dp"
                android:onClick="choose_plan"
                android:fontFamily="@font/nexabold"
                android:layout_marginBottom="40dp"
                app:layout_constraintTop_toBottomOf="@id/clickable_text"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"

                />
        <TextView
            android:textSize="11sp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/nexa_light"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/clickable_text"
            android:textColor="#eff0ed"
            android:textColorLink="#000000"
            app:layout_constraintTop_toBottomOf="@+id/l5"
            app:layout_constraintStart_toStartOf="@id/l5"
            app:layout_constraintEnd_toEndOf="@id/l5"
            />


        <ImageView
                android:id="@+id/character"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:srcCompat="@drawable/character"
                app:layout_constraintHeight_percent="0.3"
                app:layout_constraintWidth_percent="0.5"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@id/choose"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>







