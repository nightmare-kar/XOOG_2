<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_green_gradient"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/mons_black"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="-22sp"
        android:text="Practice Day"
        android:textColor="#ffffff"
        android:textSize="39.8sp"
        app:layout_constraintBottom_toTopOf="@id/guideline07"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:id="@+id/back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/selector_back_button"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
     app:srcCompat="@drawable/dark_green_no_shadow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_percent="0.8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.64"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guideline07"
        app:layout_constraintVertical_bias="0.2"/>
    <TextView
        android:id="@+id/topic"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:textColor="#ffffffff"
        app:layout_constraintTop_toTopOf="@id/imageView"
        app:layout_constraintBottom_toBottomOf="@id/imageView"
        app:layout_constraintStart_toStartOf="@id/imageView"
        app:layout_constraintEnd_toEndOf="@id/imageView"
        android:textSize="30sp"
        android:fontFamily="@font/mons_bold"
        android:text="Practise 3*3"/>
    <ImageView
        android:id="@+id/orange_rect"
        android:layout_width="0dp"
        android:layout_marginTop="20dp"
        android:layout_height="15dp"
        app:layout_constraintWidth_percent="0.86"
        android:background="@drawable/orangle_rounded_rect"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView"
        android:contentDescription="TODO" />

    <Button
        android:id="@+id/done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/orange_rect"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/orange_rect"
        android:background="@drawable/selector_orange_button"

        android:textSize="25.2sp"
        android:textColor="#ffffff"
        android:fontFamily="@font/mons_bold"
        android:lineSpacingExtra="-11.2sp"
        android:gravity="center"
        android:text="Done"
        />



    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline07"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.073" />


</androidx.constraintlayout.widget.ConstraintLayout>