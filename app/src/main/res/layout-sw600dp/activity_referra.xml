<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_pink">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nexabold"
        android:gravity="center_horizontal"
        android:textColor="#ffffff"
        android:textSize="40sp"
        app:layout_constraintVertical_bias="0.65"
        app:layout_constraintBottom_toTopOf="@+id/imageView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="EARN 2000 XCASH" />


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.13"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline"
        app:srcCompat="@drawable/black_rec" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.23997106" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintHeight_percent="0.25"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.5"
        app:srcCompat="@drawable/earn1" />

    <TextView
        android:id="@+id/invite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:fontFamily="@font/nexabold"
        android:gravity="center_horizontal"
        android:textColor="#ffffff"
        android:textSize="29sp"
        app:layout_constraintBottom_toTopOf="@+id/join"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4"
        tools:layout_editor_absoluteX="114dp"
        android:text="Invite your Friends
" />

    <TextView
        android:id="@+id/join"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nexabold"
        android:gravity="center_horizontal"
        android:textColor="#141f26"
        android:textSize="46.7sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/invite"
        tools:layout_editor_absoluteX="83dp"
        tools:layout_editor_absoluteY="371dp"
        android:text="To Join XOOG" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="544dp" />

    <ImageView
        android:id="@+id/rect_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guideline2"
        app:layout_constraintHeight_percent="0.13"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/black_rec"
        tools:layout_editor_absoluteY="378dp" />

    <ImageView
        android:id="@+id/earn1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintEnd_toStartOf="@id/earn2"
        app:layout_constraintStart_toStartOf="@id/rect_2"
        app:layout_constraintTop_toTopOf="@id/rect_2"
        app:layout_constraintBottom_toBottomOf="@id/rect_2"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintHeight_percent="0.14"
        app:srcCompat="@drawable/earn2"
        tools:layout_editor_absoluteX="94dp"
        tools:layout_editor_absoluteY="374dp" />

    <ImageView
        app:layout_constraintTop_toTopOf="@id/rect_2"
        app:layout_constraintBottom_toBottomOf="@id/rect_2"
        android:id="@+id/earn2"
        android:layout_width="0dp"
        android:adjustViewBounds="true"
        android:layout_height="0dp"
        app:layout_constraintStart_toEndOf="@id/earn1"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintHeight_percent="0.16"
        app:layout_constraintEnd_toStartOf="@id/earn3"
        app:srcCompat="@drawable/earn3"
        tools:layout_editor_absoluteX="94dp"
        tools:layout_editor_absoluteY="264dp" />

    <ImageView
        app:layout_constraintTop_toTopOf="@id/rect_2"
        app:layout_constraintBottom_toBottomOf="@id/rect_2"
        app:layout_constraintEnd_toEndOf="@id/rect_2"
        android:id="@+id/earn3"
        app:layout_constraintStart_toEndOf="@id/earn2"

        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintHeight_percent="0.14"
        app:srcCompat="@drawable/earn4"
        tools:layout_editor_absoluteX="151dp"
        tools:layout_editor_absoluteY="335dp" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="1.7sp"
        android:textColor="#ffffff"
        android:textSize="19sp"
        android:fontFamily="@font/nexabold"
        app:layout_constraintBaseline_toBaselineOf="@+id/text2"
        app:layout_constraintEnd_toEndOf="@id/earn1"
        app:layout_constraintStart_toStartOf="@id/earn1"
        android:text="Share the app link with your friends through any form available." />
    <TextView
        android:id="@+id/text2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/earn2"
        app:layout_constraintStart_toStartOf="@id/earn2"
        app:layout_constraintEnd_toEndOf="@id/earn2"
        android:textSize="19sp"
        android:textColor="#ffffff"
        android:lineSpacingExtra="-2.3sp"
        android:fontFamily="@font/nexabold"
        android:gravity="center_horizontal"
        android:text=" Ask your friends to install the app with the given link"
        />

    <TextView
        android:id="@+id/text3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="-0.3sp"
        android:textColor="#ffffff"
        android:textSize="15sp"
        android:fontFamily="@font/nexabold"
        app:layout_constraintBaseline_toBaselineOf="@+id/text2"
        app:layout_constraintEnd_toEndOf="@id/earn3"
        app:layout_constraintStart_toStartOf="@id/earn3"
        android:text=" After your friend has installed the app and has purchased XOOG's Premium programs, youâ€™ll earn 2000 Xcash and your friend will  also earns 1000 XCASH" />


    <TextView
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_green_19dp"
        android:paddingBottom="10dp"
        android:text="Share"
        android:paddingTop="10dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:fontFamily="@font/nexabold"
        android:textSize="32.5sp"
        android:textColor="#ffffff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text1"
        android:clickable="true"
        app:layout_constraintWidth_percent="0.3" />

    <ImageView
        android:id="@+id/back"
        android:layout_width="30dp"

        android:scaleX="1.4"
        android:scaleY="1.4"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_height="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:clickable="true"
        android:focusable="true"
        app:srcCompat="@drawable/selector_back_button" />
</androidx.constraintlayout.widget.ConstraintLayout>