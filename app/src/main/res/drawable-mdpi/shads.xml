<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:right="2dp" android:top="2dp">
        <shape android:shape="rectangle">


            <corners android:radius="32dp"/>

            <solid android:color="#22000000" />
        </shape>
    </item>
    <item android:bottom="7dp" android:left="7dp">
        <shape
            android:shape="rectangle"
            android:dither="true">
            <gradient
                android:startColor="#05f2f2"

                android:endColor="#d617f2a2"
                android:angle="90"
                />
            <corners android:radius="32dp"/>
        </shape>
    </item>

    <item android:drawable="@drawable/polygon" android:height="15dp" android:width="13.3dp"
        android:left="145dp"
        android:top="10dp"
        android:bottom="10dp">

    </item>
</layer-list>